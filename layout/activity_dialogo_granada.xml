<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rakel.datingfruit.Dialogo_granada">

    <ImageView
        android:id="@+id/imagenDiscoGranada"
        android:layout_width="match_parent"
        android:layout_height="659dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@raw/disco_blur" />

    <ImageView
        android:id="@+id/imagenGranada"
        android:layout_width="345dp"
        android:layout_height="260dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="216dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imagenDiscoGranada"
        app:srcCompat="@raw/granada" />

    <ImageView
        android:id="@+id/imagenDialogoGranada"
        android:layout_width="403dp"
        android:layout_height="234dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="424dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@raw/cuadro" />

    <TextView
        android:id="@+id/fraseGranada"
        android:layout_width="323dp"
        android:layout_height="132dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="500dp"
        android:textColor="@color/colorTexto"
        android:textSize="20dp"
        android:text="Granada:\n-Foh, la vín compae. Qué pintas de friki me llevas para ser tan collejo. Cómo la pera que ha venido hoy, no parecéis de aquí.
"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreGranada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="432dp"
        android:text="Granada"
        android:textColor="@color/colorTexto"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgVolverGranada"
        android:layout_width="59dp"
        android:layout_height="58dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@raw/volver" />


</android.support.constraint.ConstraintLayout>