<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rakel.datingfruit.Intro">

    <ImageView
        android:id="@+id/imagenDiscoIntro"
        android:layout_width="match_parent"
        android:layout_height="659dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@raw/puerta_disco" />

    <ImageView
        android:id="@+id/imagenLetrero"
        android:layout_width="278dp"
        android:layout_height="101dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="148dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@raw/letrero_juizzy" />

    <ImageView
        android:id="@+id/imagenTexto"
        android:layout_width="354dp"
        android:layout_height="336dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenLetrero"
        app:srcCompat="@raw/cuadro_grande" />

    <TextView
        android:id="@+id/texto"
        android:layout_width="289dp"
        android:layout_height="185dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="80dp"
        android:text="La discoteca Jazzy Juizzy, es conocida por ser el lugar con mejor ambiente de toda la capital."
        android:textColor="@color/colorTexto"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenLetrero" />

</android.support.constraint.ConstraintLayout>