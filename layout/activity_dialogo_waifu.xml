<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rakel.datingfruit.Dialogo_waifu">

    <ImageView
        android:id="@+id/imagenDiscoDialogoWaifu"
        android:layout_width="match_parent"
        android:layout_height="659dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@raw/disco_blur" />


    <ImageView
        android:id="@+id/imagenWaifu"
        android:layout_width="322dp"
        android:layout_height="402dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="108dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@raw/pera0" />


    <ImageView
        android:id="@+id/imagenDialogoWaifu"
        android:layout_width="403dp"
        android:layout_height="234dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="424dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@raw/cuadro" />

    <TextView
        android:id="@+id/fraseWaifu"
        android:layout_width="323dp"
        android:layout_height="132dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="500dp"
        android:textColor="@color/colorTexto"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreWaifu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="432dp"
        android:text="Esperanza"
        android:textColor="@color/colorTexto"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ProgressBar
        android:id="@+id/progreso"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="153dp"
        android:layout_height="30dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="32dp"
        android:max="100"
        android:progressDrawable="@drawable/custom_progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgVolverWaifu"
        android:layout_width="59dp"
        android:layout_height="58dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@raw/volver" />

    <ImageView
        android:id="@+id/corazonWaifu"
        android:layout_width="53dp"
        android:layout_height="57dp"
        android:layout_marginRight="124dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/progreso"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@raw/heart" />


</android.support.constraint.ConstraintLayout>
